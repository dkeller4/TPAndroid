<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PrimShade1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vp_listeVoyageFutur_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/pays_enconstruction1"
            android:padding="0px"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/vp_listeVoyageFutur_tv_nomPays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom pays"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/vp_listeVoyageFutur_tv_dateDepart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date de dÃ©part"/>

            <TextView
                android:id="@+id/vp_listeVoyageFutur_tv_dateRetour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date de retour"
                />

            <TextView
                android:id="@+id/vp_listeVoyageFutur_tv_complet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complet"
                />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>