<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dimitrikeller.tpandroid.Activity.ProfilVoyageFutur"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/pvf_nomPays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="pays"/>

    <ImageButton
        android:id="@+id/pvf_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pays_allemagne"
        android:adjustViewBounds="true"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/pvf_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:text="Nom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date de départ"
                android:gravity="center"/>

            <TextView
                android:id="@+id/pvf_dateDepart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date de départ"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date de Retour"
                android:gravity="center"/>
            <TextView
                android:id="@+id/pvf_dateRetour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date de Retour"
                android:gravity="center"/>

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/pvf_complet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Complet"
        android:textSize="18dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/pvf_invitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="consulter les invitations"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:layout_margin="5dp"/>


    <Button
        android:id="@+id/pvf_trouver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="trouver un compagnon"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/pvf_ajouter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ajouter un compagnon"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:layout_margin="5dp"/>




</LinearLayout>
