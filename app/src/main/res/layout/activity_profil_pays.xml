<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dimitrikeller.tpandroid.Activity.ProfilPays"
    android:orientation="vertical"
    android:background="@color/colorPrimary">


    <TextView
        android:id="@+id/pp_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Pays"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="24dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/pp_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/pays_enconstruction1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/pp_tv_continent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continent"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/pp_tv_population"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ppopulation"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/pp_tv_capitale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Capitale"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/pp_tv_devises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="devises"
                android:textSize="18dp"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/pp_tv_langues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="langues"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/pp_tv_preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="preferencess"
        android:textSize="18dp"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attractions"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_weight="30"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/pp_btn_planifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="planifier"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_weight="70"/>

</LinearLayout>

<ListView
    android:id="@+id/pp_lv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
</ListView>


</LinearLayout>
