<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dimitrikeller.tpandroid.Activity.OuvertureApp"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CompaVoyage"
        android:gravity="center"
        android:layout_weight="50"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trouver votre prochaine direction \n et un compagnon avec qui partir"
        android:layout_weight="30"
        android:textStyle="italic"
        android:textSize="18dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/ouverture_enregistrer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vous enregistrer"
        android:layout_weight="10"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/ouverture_ouv_nouvelle_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ouvrir nouvelle session"
        android:layout_weight="10"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:layout_margin="5dp"/>



    <Button
        android:id="@+id/ouverture_ouv_derniere_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ouvrir derniÃ¨re session"
        android:layout_weight="10"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:layout_margin="5dp"/>

</LinearLayout>
