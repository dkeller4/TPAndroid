<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dimitrikeller.tpandroid.Activity.ProfilAutreVoyageur"
    android:orientation="vertical"
    android:background="@color/colorPrimary">


    <TextView
        android:id="@+id/pav_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nom"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/pav_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pr_champignon"
            android:layout_weight="70"
            android:adjustViewBounds="true"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="30">

            <TextView
                android:id="@+id/pav_categorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="catégorie"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/pav_pays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pays de Naissance"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/pav_sexe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sexe"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/pav_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="age"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/pav_langues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Langues"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/pav_preferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preferences"
                android:textSize="18dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voyages à venir"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:textSize="24dp"
        android:gravity="center"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/pav_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>
