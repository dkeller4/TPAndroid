<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dimitrikeller.tpandroid.Activity.EnregistrementNouvelUtilisateur"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Créer votre profil d'utilisateur"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:text="Identifiant: "/>

        <EditText
            android:id="@+id/enu_identifiant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Identifiant"
            android:layout_weight="30"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:text="Mot de passe: "/>

        <EditText
            android:id="@+id/enu_mot_passe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mot de passe"
            android:layout_weight="30"
            android:inputType="textPassword"/>

    </LinearLayout>

    <Button
        android:id="@+id/enu_btn_suivant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Passez à l'étape suivante"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:layout_margin="5dp"/>

</LinearLayout>
